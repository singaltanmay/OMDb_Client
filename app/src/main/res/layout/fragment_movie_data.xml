<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="vertical">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:padding="4dp"
        android:rowCount="7">

        <ImageView
            android:id="@+id/fragment_movie_data_poster"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_rowSpan="3" />

        <TextView
            android:id="@+id/fragment_movie_data_title"
            android:layout_columnSpan="2"
            android:layout_margin="8dp"
            android:hint="Title"
            android:textSize="32dp" />


        <TextView
            android:id="@+id/fragment_movie_data_year"
            android:layout_margin="4dp"
            android:hint="Year"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/fragment_movie_data_rated"
            android:layout_margin="4dp"
            android:hint="Rated"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/fragment_movie_data_genre"
            android:layout_columnSpan="2"
            android:layout_margin="4dp"
            android:hint="GENRE"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/fragment_movie_data_runtime"
            android:layout_gravity="left"
            android:layout_margin="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:hint="Runtime"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/fragment_movie_data_imdbRating"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="right"
            android:layout_margin="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:hint="IMDbRatings"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/fragment_movie_data_plot"
            android:layout_columnSpan="3"
            android:layout_margin="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:maxLines="4"
            android:scrollbars="vertical"
            android:textSize="16dp"
            />

        <TextView
            android:layout_margin="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Directors"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/fragment_movie_data_directors"
            android:layout_columnSpan="2"
            android:layout_margin="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:hint="Name of directors of the movie"
            android:textSize="16dp" />

        <TextView
            android:layout_margin="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Cast"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/fragment_movie_data_cast"
            android:layout_columnSpan="2"
            android:layout_margin="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:hint="Cast starred in the movies"
            android:textSize="16dp" />
    </GridLayout>
</ScrollView>